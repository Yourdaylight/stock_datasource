# TuShare Configuration
TUSHARE_TOKEN=your_tushare_token_here

# ============================================
# HTTP Proxy Configuration
# ============================================
# Enable HTTP proxy for data fetching (TuShare, etc.)
HTTP_PROXY_ENABLED=false
HTTP_PROXY_HOST=
HTTP_PROXY_PORT=
HTTP_PROXY_USERNAME=
HTTP_PROXY_PASSWORD=

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=stock_data
# Backup ClickHouse Configuration (Optional - for dual write)
# When configured, plugins will write data to both primary and backup databases
BACKUP_CLICKHOUSE_HOST=
BACKUP_CLICKHOUSE_PORT=9000
BACKUP_CLICKHOUSE_USER=default
BACKUP_CLICKHOUSE_PASSWORD=
BACKUP_CLICKHOUSE_DATABASE=stock_datasource
# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
DATA_START_DATE=2020-01-01
DAILY_UPDATE_TIME=18:00
TIMEZONE=Asia/Shanghai

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow

# Optional Database URL (for metadata if needed)
DATABASE_URL=

# ============================================
# AI / LLM Configuration
# ============================================
# OpenAI-compatible API configuration
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# ============================================
# Langfuse Configuration (AI Observability)
# ============================================
LANGFUSE_PUBLIC_KEY=your_public_key_here
LANGFUSE_SECRET_KEY=your_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true
